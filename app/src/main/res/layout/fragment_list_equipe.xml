<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpbrasil.futebol.ListEquipesActivity">

    <ListView
        android:id="@+id/ltvEquipes"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


    <Button
        android:id="@+id/btnAddLista"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="@string/btnAdd"
        android:background="#3333ff"
        android:layout_gravity="bottom|end|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbarLista"/>




</FrameLayout>
